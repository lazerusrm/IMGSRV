# Image Sequence Server - Environment Configuration

# Copy this file to .env and modify as needed

# Server settings
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=INFO

# Security settings
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION
ALLOWED_HOSTS=*
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# Camera settings (RTSP)
CAMERA_IP=192.168.1.110
CAMERA_USERNAME=admin
CAMERA_PASSWORD=123456
CAMERA_PORT=554
CAMERA_RTSP_PATH=/stream0
CAMERA_RESOLUTION=1920x1080

# Image processing
IMAGE_WIDTH=1920
IMAGE_HEIGHT=1080
IMAGE_QUALITY=85
SEQUENCE_DURATION_MINUTES=5
SEQUENCE_UPDATE_INTERVAL_MINUTES=5
MAX_IMAGES_PER_SEQUENCE=10

# Storage settings
DATA_DIR=/var/lib/imgserv
IMAGES_DIR=/var/lib/imgserv/images
SEQUENCES_DIR=/var/lib/imgserv/sequences
MAX_STORAGE_MB=1024

# Logging
LOG_FILE=/var/log/imgserv/app.log

# VPS synchronization (for public-facing server)
VPS_ENABLED=false
VPS_HOST=your-vps-server.com
VPS_USER=imgserv
VPS_PORT=22
VPS_REMOTE_PATH=/var/www/html/monitoring
VPS_SSH_KEY_PATH=/opt/imgserv/.ssh/vps_key
VPS_RSYNC_OPTIONS=-avz --delete

# Analytics settings
ANALYTICS_ENABLED=true
ANALYTICS_UPDATE_INTERVAL_MINUTES=5
WEATHER_API_ENABLED=true
WEATHER_LATITUDE=40.0
WEATHER_LONGITUDE=-111.8
ANALYTICS_OVERLAY_ENABLED=true
ANALYTICS_OVERLAY_STYLE=minimal
